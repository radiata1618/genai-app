# Build Stage
FROM node:20-slim AS builder
WORKDIR /app
COPY package.json ./
RUN npm install
COPY . .
RUN npm run build

# Production Stage (Nginx)
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
# Default Nginx config serves port 80, allowing Cloud Run to map it automatically.
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
